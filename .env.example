# =================================================================
# .env.example - Fichier d'exemple pour les variables d'environnement
# =================================================================
# Copiez ce fichier vers .env et remplissez avec vos valeurs réelles
# ATTENTION: Ne commitez JAMAIS le fichier .env avec des vraies valeurs !

# =================================================================
# PROFIL SPRING
# =================================================================
SPRING_PROFILES_ACTIVE=dev

# =================================================================
# BASE DE DONNÉES
# =================================================================
DATABASE_URL=jdbc:mysql://localhost:3306/mosaique_capital?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC
DATABASE_USERNAME=mosaique_user
DATABASE_PASSWORD=VotreMotDePasseSecurise123!

# =================================================================
# JWT SECRETS
# =================================================================
# IMPORTANT: Générez une clé forte de 256 bits minimum
# Exemple de génération: openssl rand -base64 32
JWT_SECRET=VotreSecretJWTTresSecuriseEtDifficileADeviner123456789ABCDEF
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =================================================================
# MFA CONFIGURATION
# =================================================================
MFA_ISSUER=MosaiqueCapital
MFA_QR_WIDTH=250
MFA_QR_HEIGHT=250

# =================================================================
# REDIS (pour blacklist tokens)
# =================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=VotreMotDePasseRedis
REDIS_DATABASE=0
REDIS_TIMEOUT=2000ms

# =================================================================
# SERVEUR
# =================================================================
SERVER_PORT=9999
CONTEXT_PATH=

# =================================================================
# SSL (pour production)
# =================================================================
SSL_ENABLED=false
SSL_KEYSTORE_PATH=/path/to/keystore.p12
SSL_KEYSTORE_PASSWORD=VotreMotDePasseKeystore
SSL_KEYSTORE_TYPE=PKCS12

# =================================================================
# LOGGING
# =================================================================
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG
LOG_LEVEL_MFA=DEBUG
LOG_LEVEL_AUTH=INFO
LOG_FILE_PATH=logs/mosaique-capital.log

# =================================================================
# SÉCURITÉ
# =================================================================
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=lax

# =================================================================
# ACTUATOR
# =================================================================
ACTUATOR_ENDPOINTS=health,info,prometheus
ACTUATOR_HEALTH_DETAILS=when-authorized

# =================================================================
# EMAIL (optionnel)
# =================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=votre.email@gmail.com
MAIL_PASSWORD=VotreMotDePasseEmail
MAIL_SMTP_AUTH=true
MAIL_SMTP_STARTTLS=true

# =================================================================
# DOCKER SECRETS (pour déploiement Docker)
# =================================================================
# Si vous utilisez Docker Secrets, utilisez ces chemins:
# JWT_SECRET_FILE=/run/secrets/jwt_secret
# DATABASE_PASSWORD_FILE=/run/secrets/db_password
# REDIS_PASSWORD_FILE=/run/secrets/redis_password